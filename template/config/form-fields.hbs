 * @author: {{author}}
 * @date: {{creationDate}}
 */

export default vm => {
  return [
    {{#each subcolumn.fields}}
    {
      label: '{{label}}',
      {{!-- 如果是自定义插槽 --}}
      {{#if slot}}
      slot: '@SLOT',
      {{else}}
      {{!-- 如果存在key,直接赋值,否则直接生成@TODO --}}
      type: '{{type}}',
      {{#if key}}
      key: '{{key}}',
      {{else}}
      key: '@TODO',
      {{/if}}
      {{!-- 如果是textarea,附加rows和resize配置 --}}
      {{#equal type 'textarea'}}
      rows: {{rows}},
      resize: '{{resize}}',
      {{/equal}}
      {{!-- 如果是select,附加lookup和filter --}}
      {{#equal type 'select'}}
      {{#if lookupCode}}
      lookupCode: '{{lookupCode}}',
      filter: 'lookup',
      {{/if}}
      {{/equal}}
      {{!-- 如果是datePicker,附加dateType,valueFormat,filter --}}
      {{#equal type 'datePicker'}}
      dateType: '{{dateType}}',
      valueFormat: '{{valueFormat}}',
      filter: '{{filter}}',
      {{/equal}}
      disabled: {{disabled}},
      {{/if}}
      column: {{column}}
    }{{#array_last_index ../subcolumn.fields @index}}{{else}},{{/array_last_index}}
    {{/each}}
  ]
}