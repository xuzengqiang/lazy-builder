export default vm => {
  return [
    {{#each fields}}
    {
      label: '{{label}}',
      {{!-- 详情页统一先不生成插槽,后续如果有需要可以再自行处理 --}}
      {{#if key}}
      key: '{{key}}',
      {{else}}
      key: '@TODO',
      {{/if}}
      {{!-- 过滤条件 --}}
      {{#if lookupCode}}
      filter: {
        type:'lookup',
        args: [
          '{{lookupCode}}'
        ]
      },
      {{!-- 如果存在filter --}}
      {{else if filter}}
      filter: '{{filter}}',
      {{/if}}
      column: {{column}}
    }{{end_comma ../fields @index}}
    {{/each}}
  ]
}
