{{!-- formTools按钮生成组件 --}}
<el-dialog title="formTools按钮配置"
           :visible.sync="show">
    <el-form label-width="100px"
             ref="form"
             :model="model"
             label-position="left">
        <el-form-item label="按钮名称">
            <el-input v-model="model.label"></el-input>
        </el-form-item>
        <el-form-item label="图标">
            <el-select v-model="model.icon">
                <el-option v-for="icon in icons"
                           :key="icon"
                           :value="icon"
                           :label="icon">
                </el-option>
            </el-select>
        </el-form-item>
    </el-form>
    <dialog-footer @cancel="show=false"
                   @ensure="addFormTool">
    </dialog-footer>
</el-dialog>